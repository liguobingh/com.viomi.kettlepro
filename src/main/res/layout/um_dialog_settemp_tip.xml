<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@style/SampleTheme.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.viomi.kettlepro.view.MiTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_26"
            android:text="@string/toast_keep_warm_temp_set"
            android:textAlignment="center"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/divide_border"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@color/dialog_bg">

        <View
            android:id="@+id/devide"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/divide_border"></View>

        <com.viomi.kettlepro.view.MiTextView
            android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/devide"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textColor="@color/text_cancel"
            android:textSize="@dimen/sp_14" />

        <com.viomi.kettlepro.view.MiTextView
            android:id="@+id/button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/devide"
            android:gravity="center"
            android:text="@string/button_confirm"
            android:textColor="@color/text_ok"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</LinearLayout>